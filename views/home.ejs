<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Node Todo Application</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link rel="stylesheet" href="/styles/css/home.css">
</head>
<body>


<!--****************
    Hero Heading 
******************** -->


<div class="jumbotron">
    <h2 class="display-3">node todo application</h2>
</div>


<!--*************************************
    Form area for inputting tasks
*****************************************-->


<div class="container">
    <div class="row">
        <div class="col">
            <form method="POST" action="/">
                <div class="form-row">
                    
                    <div class="form-group col-sm-12 col-md-10">
                        <input type="text" required name="todo" class="form-control form-control-lg" 
                        placeholder="Enter your todos..." autofocus/>
                    </div>
                
                    <div class="form-group col-sm-12 col-md-2">
                        <button type="submit" class="btn btn-primary btn-lg">add task</button>
                    </div>
                
                </div>

            </form>                    
        </div>
    </div>
</div>


<!--********************** 
    Current Tasks 
**************************-->


<div class="container card">
    <div class="row card-body">
        <div class="col">
            <h4 class="display-4">Current todos
                <button class="btn btn-dark btn-sm float-right">
                    Tasks <span class="badge badge-light"><%= data.current.length %></span>
                </button>
            </h4>

            <ul class="list-group list-group-flush">
                <% if(data.current.length < 1 ) { %>
                    <li class="list-group-item">Oops! you don't have any current todos...</li>
                <% } 
                else { 
                    for(let i=0 ; i<data.current.length ; i++){ %>
                        
                    <li class="list-group-item">
                        <span class="float-left" data-todo-id = <%=data.current[i]._id.toString()%>  ><%= data.current[i].todo %></span>  

                        <div class="button-group float-right">
                            <button class="btn-edit btn btn-light btn-sm"><i class="far fa-edit"></i></button>
                            <button class="btn-remove btn btn-light btn-sm" data-todo-type="current" ><i class="far fa-trash-alt"></i></button>
                            <button class="btn-completed btn btn-light btn-sm" data-todo-type="current"><i class="fas fa-check-double"></i></button>
                        </div>
                        
                    </li>
                
                <% }}%>
            </ul>

        </div>
    </div>
</div>


<!--**************************
    Completed Todos
*****************************-->


<div class="container card">
    <div class="row card-body">
        <div class="col">
            <h4 class="display-4">completed todos
                <button class="btn btn-dark btn-sm float-right">
                    Tasks <span class="badge badge-light"><%= data.completed.length %></span>
                </button>
            </h4>
            
            <ul class="list-group list-group-flush">

                <% if(data.completed.length < 1){ %>
                    <li class="list-group-item">Oops! you don't have any completed todos...</li>
                <% } 
                else{ 
                  for(let i=0 ;i<data.completed.length ; i++){ %>
                    <li class="list-group-item">
                        <span class="float-left" data-todo-id = <%= data.completed[i]._id.toString() %> ><%= data.completed[i].todo %></span>
                        <div class="button-group float-right">
                            <button class="btn-remove btn btn-light btn-sm" data-todo-type="completed"><i class="far fa-trash-alt"></i></button>
                            <button class="btn-completed btn btn-light btn-sm" data-todo-type="completed" ><i class="fas fa-redo-alt"></i></button>
                        </div>
                    </li>
                <% }}%>
            </ul>
    
        </div>
    </div>
</div>


<script src="/scripts/home.js"></script>
</body>
</html>